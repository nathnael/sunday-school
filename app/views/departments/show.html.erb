<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12">
        <h1 class="m-0 text-dark">Departments</h1>
      </div><!-- /.col -->      
    </div><!-- /.row -->
    <div class="row mb-2">
      <div class="col-sm-10">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Show Department</li>
        </ol>
      </div><!-- /.col -->
      <div class="col-sm-2">
        <div class="title-action float-sm-right">
          <%= link_to 'Back', departments_path, :class => "btn btn-default" %>
        </div>
      </div><!-- /.col -->
    </div>
  </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-primary">
          <div class="card-body">
            <div class="form-group col-3">
              <label>Name:</label>
              <input type="text" value="<%= @department.name %>" class="form-control" placeholder="Enter ..." disabled>
            </div>
            <div class="form-group col-3">
              <label>Description:</label>
              <input type="text" value="<%= @department.description %>" class="form-control" placeholder="Enter ..." disabled>
            </div>            
            <div class="card-footer">
              <%= link_to 'Edit', edit_department_path(@department), :class => 'btn btn-primary' %>
            </div>            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

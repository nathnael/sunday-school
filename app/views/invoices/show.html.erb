<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12">
        <h1 class="m-0 text-dark">Invoices</h1>
      </div><!-- /.col -->      
    </div><!-- /.row -->
    <div class="row mb-2">
      <div class="col-sm-10">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Show Invoices</li>
        </ol>
      </div><!-- /.col -->
      <div class="col-sm-2">
        <div class="title-action float-sm-right">
          <%= link_to 'Back', invoices_path, :class => "btn btn-default" %>
        </div>
      </div><!-- /.col -->
    </div>
  </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-primary">
          <div class="card-body">            
            <div class="row col-12">
                <div class="form-group col-4">
                  <label>Invoice number:</label>
                  <input type="text" value="<%= @invoice.invoice_number %>" class="form-control" disabled>
                </div>

                <div class="form-group col-4">
                  <label>Date received:</label>
                  <input type="text" value="<%= @invoice.date_received.to_date.to_formatted_s(:long_ordinal) %>" class="form-control" disabled>
                </div>

                <div class="form-group col-4">
                  <label>Invoice date:</label>
                  <input type="text" value="<%= @invoice.invoice_date.to_date.to_formatted_s(:long_ordinal) %>" class="form-control" disabled>
                </div>
            </div>

            <div class="row col-12">
                <div class="form-group col-4">
                  <label>Invoice amount:</label>
                  <input type="text" value="<%= number_to_currency(@invoice.invoice_amount, unit: @invoice.currency_type.upcase, negative_format: "(%u%n)") %>" class="form-control" disabled>
                </div>

                <div class="form-group col-4">
                  <label>Number of waybill:</label>
                  <input type="text" value="<%= @invoice.number_of_waybill %>" class="form-control" disabled>
                </div>

                <div class="form-group col-4">
                  <label>Vendor:</label>
                  <input type="text" value="<%= @invoice.vendor.name %>" class="form-control" disabled>
                </div>
            </div>

            <div class="row col-12">
                <div class="form-group col-4">
                  <label>Lti number:</label>
                  <input type="text" value="<%= @invoice.lti_number %>" class="form-control" disabled>
                </div>

                 <div class="form-group col-4">
                  <label>Received from:</label>
                  <input type="text" value="<%= @invoice.received_from %>" class="form-control" disabled>
                </div>

                <div class="form-group col-4">
                  <label>Submitted by:</label>
                  <input type="text" value="<%= @invoice.submitted_by %>" class="form-control" disabled>
                </div>
            </div>

            <div class="row col-12">
                <div class="form-group col-4">
                  <label>Received by:</label>
                  <input type="text" value="<%= @invoice.created_by.name %>" class="form-control" disabled>
                </div>

                <div class="form-group col-4">
                  <label>Remark:</label>
                  <textarea class="form-control" disabled><%= @invoice.remark %></textarea>
                </div>
            </div>
            
            <div class="card-footer">
              <%= link_to 'Edit', edit_invoice_path(@invoice), :class => 'btn btn-primary' %>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

